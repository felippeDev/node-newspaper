<!DOCTYPE HTML>
<html lang="en-US">

<head>
    <meta charset="UTF-8">

    <title>All posts | Node newspaper</title>

    <!-- JQuery -->
    <script src="js/jquery-3.2.1.min.js"></script>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="css/bootstrap.min.css">

    <!-- Application Styles -->
    <link href="css/style.css" rel="stylesheet">

    <!-- favicon -->
    <link rel="shortcut icon" href="images/favicon.ico" />
</head>

<body>
    <nav class="navbar navbar-default navbar-static-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false"
                    aria-controls="navbar">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>

                <img src="images/logo.png" />
            </div>

            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="/">HOME</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <% for(let i = 0; i < posts.length; i++) { %>
            <div class="row">
                <div class="col-md-12">
                    <div class="noticia_wrapper">
                        <span class="noticia_autor"><%= posts[i].author %></span>
                        <a href="/post" class="noticia_titulo">
                            <%= posts[i].title %>
                        </a>
                        <span class="noticia_data"><%= posts[i].post_date %></span>
                        <br />
                        <p class="noticia_resumo">
                            <%= posts[i].summary %>
                        </p>
                        <p class="noticia_resumo">
                            <%- posts[i].content %>
                        </p>
                    </div>
                </div>
            </div>
        <% } %>
    </div>

    <script src="js/bootstrap.min.js"></script>
</body>

</html>