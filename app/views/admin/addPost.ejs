<!DOCTYPE html>
<html lang="en-US">

<head>
    <meta charset="UTF-8">

    <title>Add post | Node newspaper</title>

    <!-- JQuery -->
    <script src="../js/jquery-3.2.1.min.js"></script>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="../css/bootstrap.min.css">

    <!-- Summernote -->
    <link rel="stylesheet" href="../css/summernote.css">

    <!-- Application Styles -->
    <link href="../css/style.css" rel="stylesheet">

    <!-- favicon -->
    <link rel="shortcut icon" href="../images/favicon.ico" />
</head>

<body>
    <nav class="navbar navbar-default navbar-static-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false"
                    aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>

                <img src="../images/logo.png" />
            </div>

            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="/">HOME</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <% if(validationErrors && validationErrors.length > 0) { %>
            <div class="row">
                <div class="col-md-12">
                    <div class="alert alert-danger">
                        <strong>Some errors have occoured</strong>
                        <ul>
                            <% for(var i = 0; i < validationErrors.length; i++) { %>
                                <li>
                                    <%= validationErrors[i].msg %>
                                </li>
                                <% } %>
                        </ul>
                    </div>
                </div>
            </div>
        <% } %>

        <div class="row">
            <div class="col-md-12">
                <form action="/admin/addPost" method="POST">
                    <div class="form-group">
                        <label for="postTitle">Title</label>
                        <input type="text" name="title" class="form-control" id="postTitle" placeholder="Post title" value="<%= post.title %>">
                    </div>

                    <div class="form-group">
                        <label for="postAuthor">Author</label>
                        <input type="text" name="author" class="form-control" id="postAuthor" placeholder="Post author name" value="<%= post.author %>">
                    </div>

                    <div class="form-group">
                        <label for="postDate">Date</label>
                        <input type="date" name="post_date" class="form-control" id="postDate" placeholder="Date of post" value="<%= post.post_date %>">
                    </div>

                    <div class="form-group">
                        <label for="postSummary">Summary</label>
                        <input type="text" name="summary" class="form-control" id="postSummary" placeholder="Post summary" value="<%= post.summary %>">
                    </div>

                    <div class="form-group">
                        <label for="postContent">Content</label>
                        <textarea name="content" class="form-control" id="postContent" cols="30" rows="10"><%= post.content %></textarea>
                    </div>

                    <button type="submit" class="btn btn-default">Save</button>
                </form>
            </div>
        </div>
    </div>

    <script src="../js/bootstrap.min.js"></script>
    <script src="../js/summernote.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#postContent').summernote();
            // $('form').submit(function(e){
            //     e.preventDefault();
            //     alert($('#postContent').text());
            // });
        });
    </script>
</body>

</html>